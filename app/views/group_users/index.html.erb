<p id="notice"><%= notice %></p>

<h1>Group Users</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_users.each do |group_user| %>
      <tr>
        <td><%= group_user.id %></td>
        <td><%= group_user.user.firstname %></td>
        <td><%= group_user.group.name %></td>
        <td><%= link_to 'Show', group_user %></td>
        <td><%= link_to 'Edit', edit_group_user_path(group_user) %></td>
        <td><%= button_to 'Destroy', group_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group User', new_group_user_path %>
